# $Id: Makefile.in,v 1.2 1999-09-15 23:57:14 danw Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
MKDIR_P=@MKDIR_P@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datarootdir=@datarootdir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@ ${WARN_CFLAGS} ${ERROR_CFLAGS}
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}

all: athdir

athdir: athdir.o
	${CC} ${LDFLAGS} -o athdir athdir.o -lathdir ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${MKDIR_P} ${DESTDIR}${bindir}
	${MKDIR_P} ${DESTDIR}${mandir}/man1
	${INSTALL_PROGRAM} athdir ${DESTDIR}${bindir}
	${INSTALL_DATA} ${srcdir}/athdir.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f athdir.o athdir

distclean: clean
	rm -f config.cache config.log config.status Makefile
